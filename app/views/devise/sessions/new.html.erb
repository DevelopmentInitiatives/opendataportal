<div class='row'>
<div class='large-12 columns'>
<div class='panel'>
    <fieldset>
    <legend>Login to your account</legend>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'reg-page'}) do |f| %>
            <%= devise_error_messages! %>

            <div class="input-group margin-bottom-20">
                <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email' %>
            </div>
            <div class="input-group margin-bottom-20">
                <%= f.password_field :password, autofocus: true, class: 'form-control', placeholder: 'Password' %>
            </div>

            <div class="row">
                <div class="large-6 columns">
                    <label class="checkbox"><input type="checkbox"> Stay signed in</label>
                </div>
                <div class="large-6 columns">

                    <div class='form-group'>
                        <%= content_tag :button, :type => :submit, class: 'btn-u pull-right' do %>
                            Login
                            <i class='fa fa-sign-in'></i>
                        <% end %>
                    </div>
                </div>
            </div>
            <hr>

            <div class='panel callout'><h4>Forgot your Password ?</h4>
                    <p>no worries, <%= link_to 'click here', new_user_password_path %> to reset your password.</p>

                    <h4>No account?</h4>
                    <p>Just head over here and <%= link_to "register", register_path %></p></div>
        <% end %>
    </fieldset></div></div>
</div>
