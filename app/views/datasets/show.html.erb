<div class='row'>
    <ol class="breadcrumb">
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to "Datasets", datasets_path %></li>
      <li class="active"><i class='fa fa-cloud-download'></i> <%= @dataset.name %></li>
    </ol>

    <h2 class="page-header"><%= @dataset.name %></h2>
</div>
<div class='row'>
    <p class='pull-right'>
        <% if @dataset.attachment.image? %>
            <%= image_tag @dataset.attachment.url %>
        <% else %>
            <%= link_to @dataset.attachment.url, class: 'btn btn-primary' do %>
                Download file
                <i class='fa fa-download'></i>
            <% end %>
        <% end %>
    </p>
    <p class='pull-left'>
        <%= link_to root_path, class: 'btn btn-default' do %>
            Back to home page <span class='fa fa-home'></span>
        <% end %>

        <%= link_to "#", class: 'btn btn-info' do %>
            Comments
            <i class='fa fa-comments'></i>
        <% end %>

        <%= link_to "#", class: 'btn btn-success' do %>
            Comment on this dataset <i class='fa fa-comment-o'></i>
        <% end %>
    </p>
</div>

<div class='row panel panel-default'>
    <div class='panel-heading'>
        <h3 class='panel-title'>Visualization</h3>
    </div>
    <div class='panel-body'>
        <div id="container" style="height: 400px; margin: auto; min-width: 310px; max-width: 600px"></div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function(){
        $(function () {
            var seriesData = [];
            for (var i=0; i < gon.data_values.length; i++){
                var obj = gon.data_values[i];
                seriesData.push(obj);
            }
            console.log(seriesData);

            $('#container').highcharts({
                chart: {
                    type: 'spline'
                },
                title: {
                    text: gon.chartTitle
                },
                subtitle: {
                    text: gon.subTitle
                },
                xAxis: {
                    categories: gon.headings
                },
                yAxis: {
                    title: {
                        text: gon.yLabel
                    },
                    labels: {
                        formatter: function() {
                            return this.value // +'Â°' (not used)
                        }
                    }
                },
                tooltip: {
                    crosshairs: true,
                    shared: true
                },
                plotOptions: {
                    spline: {
                        marker: {
                            radius: 4,
                            lineColor: '#666666',
                            lineWidth: 1
                        }
                    }
                },
                series: seriesData
            });
        });
    });
</script>
