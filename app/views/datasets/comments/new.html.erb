<div class='row'>
<div class='panel panel-info'>
  <div class='panel-heading'><h1>New Comment!</h1></div>
  <div class='panel-body'>
    <%= form_for([@dataset, @comment]) do |f| %>

      <div class='form-group'>
        <%= f.label :content %>
        <%= f.text_field :content, :autofocus => true, class: 'form-control' %>
      </div>

      <div class='form-group'>
        <%= content_tag :button, :type => :submit, class: 'btn btn-primary' do %>
          Post!
          <i class='fa fa fa-user'></i>
        <% end %>
      </div>
    <% end %>
    </div>
</div>
</div>
