<% title('All Datasets') %>
<div class='row'>
    <ol class="breadcrumb">
      <li>
        <%= link_to root_path do%>
            Home <i class='fa fa-home'></i>
        <% end %>
      </li>

      <li class="active">All Datasets</li>
    </ol>

    <% if signed_in? %>
    <div class='row'>
        <%= link_to new_dataset_path, class: 'btn btn-primary' do %>
            New Dataset <i class='fa fa-plus'></i>
        <% end %>

        <div class='alert alert-info pull-right'>
            <p class='leading'>You can download all datasets as:</p>
            <ul>
                <li><%= link_to "JSON", "#{datasets_url}.json" %></li>
                <li><%= link_to "CSV", datasets_path(@datasets, format: 'csv') %></li>
            </ul>
        </div>
    </div>
    <% end %>
    <% if @datasets %>

        <div class='row'>
            <h3 class='pull-left'>Datasets</h3>
            <span class="pull-right">
                <%= form_tag datasets_path, method: :get, class: 'form-inline' do %>
                    <%= text_field_tag :search, params[:search], placeholder: 'keyword, name, category' %>
                    <%= submit_tag "Search", name: nil, class: 'btn btn-primary' do %>
                        <span class='fa fa-search'></span>
                    <% end %>
                <% end %>

            </span>
        </div>

        <div style="margin-bottom: 5.5em;" data-no-turbolink>
            <% @datasets.each do |dataset| %>

                <% if dataset.is_a? Array %>
                    <% use_dataset = dataset[0] %>
                <% else %>
                    <% use_dataset = dataset %>
                <% end %>

                <div class='panel panel-default'>

                    <div class='panel-heading'>
                        <h1 class='panel-title'>
                            <%= use_dataset.name %>
                        </h1>
                    </div>

                    <div class='panel-body'>
                        <%= use_dataset.description %> <br/>

                        <% if use_dataset.created_at %>
                            <hr>
                            <span class='date'>
                                <i class='fa fa-calendar'></i> posted <%= time_ago_in_words(use_dataset.created_at)+ " ago" %>
                            </span><br/>
                            <span class='comments'>
                                <i class='fa fa-comments'></i>
                                <%= pluralize(use_dataset.comments.count, 'comment') %>
                            </span>
                            <span class='views'>
                                <i class='fa fa-eye'></i>
                                <%= pluralize use_dataset.view_count, 'view' %>
                            </span>
                        <% end %>
                    </div>

                    <div class='panel-footer'>
                        <%= link_to use_dataset, class: 'btn btn-default' do%>
                            visit <i class='fa fa-eye'></i>
                        <% end %>
                        <% if current_user %>
                            <% if is_owner_of(use_dataset) or current_user.has_role?(:admin) %>
                                <%= link_to delete_dataset_path(use_dataset), class: 'btn btn-danger' do%>
                                    Delete <i class='fa fa-trash-o'></i>
                                <% end %>
                            <% end %>
                        <% end %>
                        <%= link_to use_dataset.attachment.url do %>
                            <i class='fa fa-download'></i>
                        <% end %>
                    </div>

                </div>
            <% end %>
            <% if params[:search].nil? %>
                <%= paginate @datasets %>
            <% end %>
        </div>

    <% end %>
</div>
