 <form data-abide method="post" action="" id='sendEmail'>
  <h3>Please fill in the form below and we will contact you shortly</h3>
  <fieldset>
      <div class="textarea">
        <label for="remarks">Comments <small>required</small></label>
         <textarea id="remarks" name="remarks" placeholder="Leave your remarks here." required pattern="[a-zA-Z]+"></textarea>
         <input type='hidden' id='workspace' name='workspace_id' value="<%= @workspace.id %>"/>
         <% if current_user.nil? %>
         <div class='alert'>
           You have to be logged in to send email.
         </div>
         <% else %>
         <input type='hidden' id='user' name='user_id' value="<%= current_user.id %>"/>
         <% end %>
       </div>
      <button type="submit" value="send" id='emailSend'>Submit</button>
  </fieldset>
</form>
