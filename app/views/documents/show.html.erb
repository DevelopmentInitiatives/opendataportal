<div class='row'>
    <div class='panel panel-warning'>
        <div class='panel-heading'>
            <div class='row'>
                <div class='col-xs-6'>
                    <i class='fa fa-book fa-5x'></i>
                </div>
                <div class='col-xs-6 text-right'>
                    <%= @document.name %>
                </div>
            </div>
        </div>

        <div class='panel-footer announcement-bottom'>
            <div class='col-xs-6'><%= @document.description %></div>
            <div class='col-xs-6 text-right'><%= link_to @document.upload.url do %><span class='fa fa-arrow-circle-right'></span><% end %></div>
        </div>
    </div>
</div>
