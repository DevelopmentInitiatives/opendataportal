<div class='row' style='margin-top: 5px;'>


<div class='large-12 columns'><h3 class='page-header'>Upload new document</h3>
<%= simple_form_for @document, html: { multipart: true } do |f| %>

    <%= render 'shared/error_messages', object: f.object %>
    <div class='form-group'>
        <%= f.label :name, class: 'col-lg-2' %>
        <div class='col-lg-10'>
            <%= f.input_field :name, class: 'form-control' %>
        </div>
    </div>

    <div class='form-group'>
        <%= f.label :description, class: 'col-lg-2' %>
        <div class='col-lg-10'>
            <%= f.input_field :description, class: 'form-control' %>
        </div>
    </div>

    <div class='form-group'>
        <%= f.label :tags, "Category(ies)", class: 'control-label col-lg-2' %>
        <div class='col-lg-10'>
            <%= f.input_field :tags, class: 'form-control' %>
        </div>
    </div>


    <div class='form-group'>
        <%= f.label :attachment, class: 'col-lg-2' %>
        <div class='col-lg-10'>
            <%= f.file_field :attachment, class: 'form-control' %>
        </div>
    </div>

    <div class='form-group'>
        <div class='col-lg-offset-2 col-lg-10'>
            <%= f.button :submit, "Upload document", class: 'button success' %>
        </div>
    </div>


<% end %>
</div></div>
