<% if signed_in? %>
    <% title("Welcome #{current_user.first_name}") %>
<% else %>
    <% title("Welcome") %>
<% end %>

<% if signed_in? %>

<div class='row'>
    <p>
        <b>Open Development Uganda:</b> free data for all.
    </p>
</div>
<div class='row'>
    <div class='col-md-4'>
        <div class='panel panel-default'>
            <div class='panel-heading'>
                <h2>Documents</h2>
            </div>
            <div class='panel-body'>
                <ul>
                    <% @recent_documents.each do |document| %>
                    <li><%= link_to document.name, document.upload.url %></li>
                    <% end %>
                </ul>
                <hr>
                <%= link_to "More Documents...", documents_path, class: 'btn btn-default', style: 'text-align:center;' %>
            </div>
        </div>
    </div>
    <div class='col-md-4'>
        <div class='panel panel-default'>
            <div class='panel-heading'>
                <h2>Find a dataset</h2>
            </div>
            <div class='panel-body'>
                <%= form_tag root_path, method: :get do %>
                    <p>
                        <%= text_field_tag :search, params[:search] %>
                        <%= submit_tag "Search", name: nil, class: 'btn btn-default' %>
                    </p>
                <% end %>

                <% if @datasets %>
                    <ul>
                        <% @datasets.each do |dataset| %>
                        <li><%= link_to dataset.name, dataset %></li>
                        <% end %>
                    </ul>
                <% else %>
                    <div class='alert alert-danger'>
                        <p>We could not find the dataset you are looking for</p>
                    </div>
                <% end %>

            </div>
        </div>
    </div>
    <div class='col-md-4'>
        FAQs
        <hr>
    </div>
</div>

<% else %>
    <%= render "marketing" %>
<% end %>
