<% title("Register a workspace (or organization)") %>

<div clas='row'>
    <div class='columns large-8'>
        <fieldset>
            <legend>New Workspace</legend>

        <%= simple_form_for @workspace do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
            <%= f.text_field :organization_name, placeholder: "Workspace or Organization's Name" %>
            <span id='counter'></span>
            <%= f.text_area :description, placeholder: 'Describe your workspace', rows: 10 %>
            <%= f.text_field :location, placeholder: 'Where are you located?' %>
            <%= f.button :submit, "Register", class: 'button success secondary' %>
        <% end %>

        </fieldset>
    </div>
</div>
